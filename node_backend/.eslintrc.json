{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:perfectionist/recommended-natural",
      "@atomix",
      "standard",
      "plugin:sonarjs/recommended",
      "plugin:perfectionist/recommended-natural"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      // * Отключение prettier
      "prettier/prettier": "off",

      // * Отключение не используемых опций
      "no-shadow": "off",
      "no-unused-vars": "off",
      "import/no-cycle": "off",
      "no-magic-numbers": "off",
      "no-empty-pattern": "off",
      "no-nested-ternary": "off",
      "import/extensions": "off",
      "no-param-reassign": "off",
      "prefer-rest-params": "off",
      "prefer-destructuring": "off",
      "no-underscore-dangle": "off",
      "no-use-before-define": "off",
      "class-methods-use-this": "off",
      "function-paren-newline": "off",
      "import/no-default-export": "off",
      "unicorn/filename-case": "off",
      "no-bitwise": "off",
      "sonarjs/no-duplicate-string": "off",

      // * Формат названия переменной
      "unicorn/prefer-spread": "error",

      // * Формат стиля фигурных скобок
      "brace-style": [
          "error",
          "1tbs"
      ],

      // * Формат стиля функций
      "curly": [
          "error",
          "all"
      ],

      // * Формат длины строки (120 символов)
      "max-len": [
          "error",
          {
              "code": 120,
              "ignoreUrls": true,
              "ignoreRegExpLiterals": true
          }
      ],

      // * Формат отступов (Пробел = 2)
      "indent": [
          "error",
          2
      ],

      // * Форматирование конца строки по UNIX формату (LF)
      "linebreak-style": [
          "error",
          "unix"
      ],

      // * Формат строк ('string')
      "quotes": [
          "error",
          "single"
      ],

      // * Формат конца строки, установка точки с запятой (;)
      "semi": [
          "error",
          "always"
      ],

      // * Формат установки пробела перед телом функции
      "space-before-function-paren": [
          "error",
          {
              "anonymous": "always",
              "named": "always",
              "asyncArrow": "always"
          }
      ],

      // * Формат отступов между операторами
      "padding-line-between-statements": [
          "error",
          {
              "blankLine": "always",
              "prev": [
                  "const",
                  "let",
                  "var"
              ],
              "next": "*"
          },
          {
              "blankLine": "any",
              "prev": [
                  "const",
                  "let",
                  "var"
              ],
              "next": [
                  "const",
                  "let",
                  "var"
              ]
          }
      ],

      // * Формат длины названия переменной
      "id-length": [
          "error",
          {
              "min": 3,
              "exceptions": [
                  "i",
                  "x",
                  "y",
                  "e",
                  "t",
                  "_",
                  "id",
                  "or",
                  "OR",
                  "z"
              ]
          }
      ],

      // * Формат названия переменной
      "id-match": [
          "warn",
          "^(([A-Za-z0-9]+){1,})|([A-Z][A-Z_0-9]+)$",
          {
              "properties": false,
              "onlyDeclarations": true
          }
      ],

      // * Формат импортов в файле
      "perfectionist/sort-imports": [
          "error",
          {
              "type": "natural",
              "order": "asc",
              "groups": [
                  "type",
                  "react",
                  "nanostores",
                  [
                      "builtin", "external"
                  ],
                  "internal-type",
                  "internal",
                  [
                      "parent-type", "sibling-type", "index-type"
                  ],
                  [
                      "parent", "sibling", "index"
                  ],
                  "side-effect",
                  "style",
                  "object",
                  "unknown"
              ],
              "custom-groups": {
                  "value": {
                      "react": ["react", "react-*"],
                      "nanostores": "@nanostores/**"
                  },
                  "type": {
                      "react": "react"
                  }
              },
              "newlines-between": "always",
              "internal-pattern": [
                  "@/components/**",
                  "@/stores/**",
                  "@/pages/**",
                  "@/lib/**"
              ]
          }
      ]
  }
}
